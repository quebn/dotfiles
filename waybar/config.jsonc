{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 45,
  // "spacing": 4,
  "modules-left": [
    "custom/arch", 
    "clock", 
    "tray", 
    "hyprland/workspaces"],
  //"modules-left": ["clock", "tray", "custom/spotify"],
  //"modules-center": ["hyprland/workspaces"],
  "modules-center": ["custom/spotify"],
  "modules-right": [
    "network",
    // "bluetooth",
    "temperature",
    "memory",
    "cpu",
    "battery",
    "pulseaudio",
    "backlight"
  ],
  
  "hyprland/window": {
    "format": "{}",
    "max-length": 40
  },

  "hyprland/workspaces": {
