    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û±àë"]
  },

  "pulseaudio": {
    "format": "{icon} {volume}",
    "tooltip": false,
    "format-muted": "ÔÄ¶ „Éü„É•„Éº„Éà",
    "min-length":6,
    //"on-click": "pamixer -t",
    //"on-click-right": "pavucontrol",
    //"on-scroll-up": "pamixer -i 5",
    //"on-scroll-down": "pamixer -d 5",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "ÔÄ• ",
      "headset": "ÔÄ• ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
    }
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ±  Muted",
    // "on-click": "pamixer --default-source -t",
    // "on-scroll-up": "pamixer --default-source -i 4",
    // "on-scroll-down": "pamixer --default-source -d 4",
    "scroll-step": 5
  },

  "temperature": {
    "thermal-zone": 1,
    "format": "Ôãâ {temperatureC}¬∞C",
    "critical-threshold": 80,
    "format-critical": "Ôãá {temperatureC}¬∞C"
  },

  "cpu": {
    "interval": 10,
    "format": "Ôíº  {usage}%",
    "tooltip": true,
    //"tooltip-format": "CPU - {usage} usage",
    "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
  },

  "memory": {
    "interval": 30,
    "format": "Óæè  {}%",
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used",
    "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
  },

  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "Û∞ñ© {signalStrength}%",
    //"format-wifi": "Û∞§® {signalStrength}%",
    "format-ethernet": "{ipaddr}/{cidr} Û±Çá ",
    "tooltip-format": "{essid} - {ifname} via {gwaddr} Û±Çá ",
    "format-linked": "{ifname} (No IP) Û±Çá ",
    "format-disconnected": "Û∞§Æ 0%"
    //"format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    //"on-click-right": "~/.config/rofi/bin/network"
  },

  "bluetooth": {
    "format": "Ôäî {status}",
